{
  "name": "root",
  "private": true,
  "version": "0.1.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tsdx",
      "**/tsdx/**"
    ]
  },
  "commitlint": {
    "rules": {
      "subject-case": [
        0,
        "never"
      ]
    },
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,html,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "blog:add": "yarn workspace blog add",
    "blog:remove": "yarn workspace blog remove",
    "blog:dev": "yarn workspace blog dev",
    "storybook:add": "yarn workspace storybook add",
    "storybook:remove": "yarn workspace storybook remove",
    "storybook:start": "yarn workspace storybook storybook",
    "clean": "lerna clean",
    "release": "lerna publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@reduxjs/toolkit": "^1.6.2",
    "axios": "^0.24.0",
    "lodash": "^4.17.21",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.19.5",
    "react-redux": "^7.2.6",
    "react-scripts": "4.0.3",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3",
    "twin.macro": "^2.8.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@lerna/project": "^4.0.0",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/lodash": "^4.14.177",
    "@types/node": "16.11.7",
    "@types/prettier": "^2",
    "@types/react": "17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@yarnpkg/pnpify": "^3.1.1-rc.4",
    "autoprefixer": "latest",
    "babel-plugin-macros": "^3.1.0",
    "cypress": "^9.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "react-is": "^17.0.2",
    "tailwindcss": "latest",
    "typescript": "4.4.4",
    "webpack-hot-middleware": "^2.25.1"
  },
  "packageManager": "yarn@3.1.0"
}
